<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <cn.walkpast.rahmen.RahmenView
        android:id="@+id/rahmen_view_1"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dp5"
        app:rhv_backgroud="@drawable/bg_rahmen_1"
        app:rhv_duration="1000"
        app:rhv_image_height="@dimen/rhv_pw_height"
        app:rhv_image_rotation="-10"
        app:rhv_image_width="@dimen/rhv_pw_width"
        app:rhv_image_x="10%"
        app:rhv_image_y="10%"/>

    <cn.walkpast.rahmen.RahmenView
        android:id="@+id/rahmen_view_2"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_above="@id/rahmen_view_1"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/dp5"
        app:rhv_duration="1000"
        app:rhv_foreground="@drawable/fg_rahmen_1"
        app:rhv_image="@drawable/sample_plot_5"
        app:rhv_image_height="@dimen/rhv_pw_height"
        app:rhv_image_rotation="-10"
        app:rhv_image_width="@dimen/rhv_pw_width"
        app:rhv_image_x="10%"
        app:rhv_image_y="10%"/>

    <cn.walkpast.rahmen.RahmenView
        android:id="@+id/rahmen_view_3"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/rahmen_view_1"
        android:layout_margin="@dimen/dp5"
        app:rhv_backgroud="@drawable/bg_rahmen_1"
        app:rhv_duration="1000"
        app:rhv_image_height="@dimen/rhv_pw_height"
        app:rhv_image_rotation="-10"
        app:rhv_image_width="@dimen/rhv_pw_width"
        app:rhv_image_x="10%"
        app:rhv_image_y="10%"/>


</RelativeLayout>
